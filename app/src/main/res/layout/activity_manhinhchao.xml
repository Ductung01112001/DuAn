<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/grad_bg"
    tools:context=".Activity.ManhinhchaoActivity">

    <ImageView
        android:id="@+id/icon_library"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:textColor="#FF0000"
        android:id="@+id/tv_titleapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="43dp"
        android:layout_toRightOf="@+id/icon_library"
        android:textStyle="bold"
        android:text="Quản Lý Thư Viện "
        android:textSize="50sp" />

    <TextView
        android:textSize="50sp"
        android:id="@+id/Et_title"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="italic"
        android:text="Welcome"
        android:layout_below="@id/icon_library"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/loading_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Et_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>