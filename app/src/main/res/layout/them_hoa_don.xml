<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/edt_maHoaDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Mã hóa đơn" />

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="3"
            android:hint="DD-MM-YYYY"
            android:id="@+id/tv_ngayMuaHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

<!--        <TextView-->
<!--            android:layout_weight="3"-->
<!--            android:id="@+id/tv_ngayMuaHD"-->
<!--            android:layout_width="275dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="24sp" />-->

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_picDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Chọn" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_themHD"
            android:layout_weight="1"
            android:onClick="btnthemhoadon"
            android:text="Thêm hóa đơn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="btndshoadon"
            android:layout_weight="1"
            android:text="Danh sách hóa đơn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>