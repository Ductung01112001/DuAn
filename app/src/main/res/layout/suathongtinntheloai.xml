<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:src="@drawable/theloai2" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterMaxLength="20"
        app:counterEnabled="true"
        android:id="@+id/textInputLayoutEdt_maTheLoai">

        <com.google.android.material.textfield.TextInputEditText
            android:hint="Mã thể loại"
            android:id="@+id/edtsuamatheloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterMaxLength="20"
        app:counterEnabled="true"
        android:id="@+id/textInputLayoutEdt_tenTheLoai">

        <com.google.android.material.textfield.TextInputEditText
            android:hint="Tên thể loại"
            android:id="@+id/edtsuatentheloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>




</LinearLayout>